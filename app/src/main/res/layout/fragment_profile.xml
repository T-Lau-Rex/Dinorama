<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.fragment.ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/login_padding"
        android:paddingHorizontal="@dimen/activity_horizontal_padding"
        >

        <TextView
            android:id="@+id/tvProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="@dimen/default_margin"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/profile"
            android:textColor="@color/main_light"
            android:textSize="@dimen/general_titles"
            app:layout_constraintBottom_toTopOf="@+id/clInfo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iconEditNameCorreo"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="@dimen/padding_icon"
            android:layout_marginBottom="@dimen/default_margin"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_edit_2"
            app:layout_constraintBottom_toBottomOf="@+id/tvProfile"
            app:layout_constraintStart_toEndOf="@+id/tvProfile"
            app:layout_constraintTop_toTopOf="@+id/tvProfile"
            app:tint="@color/main_light" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            app:layout_constraintBottom_toTopOf="@+id/llButtons"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvProfile">

            <!-- android:id="@+id/imgPhoto" -->
            <!-- android:id="@+id/imgIconPhoto" -->
            <ImageView
                android:id="@+id/imgIconPhoto"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginStart="8dp"
                android:clickable="true"
                android:contentDescription="@string/img_profile_mini"
                android:focusable="true"
                android:src="@drawable/ic_profile"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/clTextInfo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clTextInfo"
                android:layout_width="@dimen/zero"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_big"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imgIconPhoto"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:textAlignment="center"
                    android:textColor="@color/main_light"
                    android:textSize="@dimen/register_title"
                    app:layout_constraintBottom_toTopOf="@+id/tvMail"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Nombre" />

                <TextView
                    android:id="@+id/tvMail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/light_grey"
                    android:textSize="@dimen/regular_size"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvName"
                    tools:text="correo@mail.com" />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/llButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/activity_vertical_margin"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clInfo">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogOut"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/default_margin"
                android:layout_marginVertical="@dimen/default_margin"
                android:backgroundTint="@color/neornithischia"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/cerrar_sesion"
                android:textColor="@color/background"
                android:textSize="@dimen/hint_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:strokeColor="@color/neornithischia" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDeleteAccount"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/default_margin"
                android:layout_marginVertical="@dimen/default_margin"
                android:elevation="0dp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/deleteAccount"
                android:textColor="@color/neornithischia"
                android:textSize="@dimen/hint_size"
                app:strokeColor="@color/neornithischia" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clChangePhoto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:translationZ="2dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <View
            android:layout_width="@dimen/zero"
            android:layout_height="@dimen/zero"
            android:layout_marginStart="-10dp"
            android:layout_marginEnd="-10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/black_transparent"
            />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvChangePhoto"
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/activity_details_horizontal_padding"
            android:layout_marginTop="@dimen/biggest_size"
            android:visibility="visible"
            app:cardCornerRadius="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/mid_main">

                <ImageView
                    android:id="@+id/btnCloseChangeImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/padding_icon"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_close"
                    app:layout_constraintBottom_toBottomOf="@+id/tvImageProfile"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tvImageProfile"
                    app:tint="@color/main_light" />

                <TextView
                    android:id="@+id/tvImageProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/activity_vertical_margin"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/txt_image_photo"
                    android:textColor="@color/main_light"
                    android:textSize="@dimen/register_title"
                    app:layout_constraintBottom_toTopOf="@+id/ivBigPhoto"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/ivBigPhoto"
                    android:layout_width="280dp"
                    android:layout_height="280dp"
                    android:src="@drawable/ic_profile"
                    app:layout_constraintBottom_toTopOf="@+id/llBtnSavePhoto"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvImageProfile" />

                <LinearLayout
                    android:id="@+id/llBtnSavePhoto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/activity_vertical_margin"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ivBigPhoto">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnChangePhoto"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/default_margin"
                        android:layout_marginVertical="@dimen/default_margin"
                        android:backgroundTint="@color/neornithischia"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/btn_change"
                        android:textColor="@color/background"
                        android:textSize="@dimen/hint_size"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:strokeColor="@color/neornithischia" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSavePhoto"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/default_margin"
                        android:layout_marginVertical="@dimen/default_margin"
                        android:backgroundTint="@color/neornithischia"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/btn_save"
                        android:textColor="@color/background"
                        android:textSize="@dimen/hint_size"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:strokeColor="@color/neornithischia" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clChangeData"
        android:visibility="gone"
        android:translationZ="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="@dimen/zero"
            android:layout_height="@dimen/zero"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/black_transparent"
            />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvChangeData"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/activity_details_horizontal_padding"
            android:backgroundTint="@color/mid_main"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/default_margin">

                <ImageView
                    android:id="@+id/btnCloseChangeData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_details_horizontal_padding"
                    android:clickable="true"
                    android:contentDescription="@string/img_profile_big"
                    android:focusable="true"
                    android:src="@drawable/ic_close"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/main_light" />

                <ImageView
                    android:id="@+id/ivSmallPhoto"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="@dimen/login_padding"
                    android:contentDescription="@string/img_profile_mini"
                    android:src="@drawable/ic_profile"
                    app:layout_constraintBottom_toTopOf="@+id/tilNameChange"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilNameChange"
                    style="@style/CustomTextInputLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/activity_details_horizontal_padding"
                    android:layout_marginVertical="@dimen/activity_horizontal_padding"
                    android:hint="@string/user_name_hint"
                    android:textColorHint="@color/main_light"
                    app:endIconMode="clear_text"
                    app:layout_constraintBottom_toTopOf="@+id/tilPassChange"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ivSmallPhoto">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tielNameChange"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_input_background"
                        android:fontFamily="@font/poppins_regular"
                        android:inputType="textCapWords"
                        android:maxLength="50"
                        android:textColor="@color/main_light"
                        android:textColorHint="@color/main_light"
                        android:textSize="@dimen/regular_size"
                        tools:text="Laura" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilPassChange"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/activity_details_horizontal_padding"
                    android:layout_marginVertical="@dimen/activity_horizontal_padding"
                    android:clickable="true"
                    android:focusable="true"
                    android:hint="@string/password_hint"
                    android:textColorHint="@color/main_light"
                    app:boxStrokeWidth="0dp"
                    app:endIconMode="password_toggle"
                    app:endIconTint="@color/main_light"
                    app:layout_constraintBottom_toTopOf="@+id/tilMailChange"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tilNameChange"
                    app:passwordToggleEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tielPassChange"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_input_background"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:fontFamily="@font/poppins_regular"
                        android:inputType="textPassword"
                        android:longClickable="false"
                        android:maxLength="50"
                        android:paddingEnd="@dimen/padding_end_input"
                        android:text="123456"
                        android:textColor="@color/main_light"
                        android:textColorHint="@color/main_light"
                        android:textSize="@dimen/regular_size" />

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilMailChange"
                    style="@style/CustomTextInputLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/activity_details_horizontal_padding"
                    android:layout_marginVertical="@dimen/activity_horizontal_padding"
                    android:hint="@string/email_hint"
                    android:textColorHint="@color/main_light"
                    app:endIconMode="clear_text"
                    app:layout_constraintBottom_toTopOf="@+id/btnSaveChanges"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tilPassChange">


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tielMailChange"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_input_background"
                        android:fontFamily="@font/poppins_regular"
                        android:inputType="textEmailAddress"
                        android:maxLength="50"
                        android:textColor="@color/main_light"
                        android:textColorHint="@color/main_light"
                        android:textSize="@dimen/regular_size"
                        tools:text="laura@mail.com" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSaveChanges"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/activity_details_horizontal_padding"
                    android:layout_marginTop="@dimen/activity_horizontal_padding"
                    android:backgroundTint="@color/neornithischia"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/save_changes"
                    android:textColor="@color/background"
                    android:textSize="@dimen/hint_size"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tilMailChange"
                    app:strokeColor="@color/neornithischia" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clChangePass"
        android:visibility="gone"
        android:translationZ="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="@dimen/zero"
            android:layout_height="@dimen/zero"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/black_transparent"
            />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvChangePass"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/activity_details_horizontal_padding"
            android:backgroundTint="@color/mid_main"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/default_margin">

                <TextView
                    android:id="@+id/tvChangePassTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/activity_vertical_margin"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/password_hint"
                    android:textColor="@color/main_light"
                    android:textSize="@dimen/register_title"
                    app:layout_constraintBottom_toTopOf="@+id/tilYourPass"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/btnCloseChangePass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_details_horizontal_padding"
                    android:clickable="true"
                    android:contentDescription="@string/img_profile_big"
                    android:focusable="true"
                    android:src="@drawable/ic_close"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/main_light" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilYourPass"
                    style="@style/CustomTextInputLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/activity_details_horizontal_padding"
                    android:layout_marginBottom="@dimen/activity_horizontal_padding"
                    android:clickable="true"
                    android:focusable="true"
                    android:hint="@string/current_password"
                    android:textColorHint="@color/main_light"
                    app:boxStrokeWidth="0dp"
                    app:endIconMode="password_toggle"
                    app:endIconTint="@color/main_light"
                    app:layout_constraintBottom_toTopOf="@+id/tilNewPass"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvChangePassTitle"
                    app:passwordToggleEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tielYourPass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_input_background"
                        android:fontFamily="@font/poppins_regular"
                        android:inputType="textPassword"
                        android:maxLength="50"
                        android:text="123456"
                        android:textColor="@color/main_light"
                        android:textColorHint="@color/main_light"
                        android:textSize="@dimen/regular_size" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilNewPass"
                    style="@style/CustomTextInputLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/activity_details_horizontal_padding"
                    android:layout_marginVertical="@dimen/activity_horizontal_padding"
                    android:clickable="true"
                    android:focusable="true"
                    android:hint="@string/new_password"
                    android:textColorHint="@color/main_light"
                    app:boxStrokeWidth="0dp"
                    app:endIconMode="password_toggle"
                    app:endIconTint="@color/main_light"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tilYourPass"
                    app:layout_constraintBottom_toTopOf="@+id/btnSaveNewPass">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tielNewPass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_input_background"
                        android:fontFamily="@font/poppins_regular"
                        android:inputType="textPassword"
                        android:maxLength="50"
                        android:textColor="@color/main_light"
                        android:textColorHint="@color/main_light"
                        android:textSize="@dimen/regular_size" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSaveNewPass"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/activity_details_horizontal_padding"
                    android:layout_marginTop="@dimen/activity_horizontal_padding"
                    android:backgroundTint="@color/neornithischia"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/save_changes"
                    android:textColor="@color/background"
                    android:textSize="@dimen/hint_size"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tilNewPass"
                    app:strokeColor="@color/neornithischia" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>